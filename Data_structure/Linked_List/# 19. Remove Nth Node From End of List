// C++



/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        ListNode *dummy = new ListNode();
        dummy->next = head;
        ListNode *curr = head;  
            
        int len = 0;
        
        while (curr)
        {
            len++;
            curr = curr->next;

        }
        
        // remove L-n+1 node
        len -= n;
        curr = dummy;
        
        
        while (len-- > 0)
        {
            curr = curr->next;
        }
        
        curr->next = curr->next->next;      //skip L-n+1 node  
        
        return dummy->next;
        
    }
};
