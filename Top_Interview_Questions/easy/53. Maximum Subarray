//C++:
class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        if(nums.empty())    return 0;
        int curr_sum=nums[0], max_sum = nums[0];
        
        for (int i=1;i<nums.size();++i)
        {
            curr_sum = max(curr_sum+nums[i],nums[i]);
            max_sum = max(curr_sum,max_sum);
        }
        
        return max_sum;
    }
};
// TC: O(n)
// SC: O(1)
