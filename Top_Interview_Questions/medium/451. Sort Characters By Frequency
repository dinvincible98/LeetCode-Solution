//C++:
class Solution {
public:
    string frequencySort(string s) {
        unordered_map<char,int> mp;
        for (auto& c:s)
        {
            mp[c]++;
        }
        
        priority_queue<pair<int,char>> pq;
        for (auto& it:mp)
        {
            pq.push({it.second,it.first});
        }
        
        string res = "";
        while (!pq.empty())
        {
            auto top = pq.top();
            pq.pop();
            int times = top.first;
            while (times--)
            {
                res += top.second;
            }
        }
        
        return res;
            
    }
};

// TC: O(nlogn)
// SC: O(n)
