//C++:
class Solution {
public:
    int maxChunksToSorted(vector<int>& arr) {
        int cnt = 0, curr_max = 0;
        
        for (int i=0;i<arr.size();++i)
        {
            curr_max = max(curr_max,arr[i]);
            if(curr_max == i)   ++cnt;
        }
        return cnt;
    }
};

// TC: O(n)
// SC: O(1)
