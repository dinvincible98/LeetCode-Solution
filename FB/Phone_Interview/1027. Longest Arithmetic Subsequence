//C++:

class Solution {
public:
    int longestArithSeqLength(vector<int>& nums) {
        int n = nums.size();
        int max_val = 0;
        
        for (auto& n:nums) max_val = max(max_val,n);
        
        vector<vector<int>> dp(2*max_val+1,vector<int>(n,0));
        
        int res = 0;
        
        for(int i=1;i<n;++i)
        {
            for(int j=0;j<i;++j)
            {
                int diff = nums[i] - nums[j] + max_val;
                dp[diff][i] = dp[diff][j]+1;
                res = max(res,dp[diff][i]);        
            }
        }
        
        return res + 1;
        
    }
};
