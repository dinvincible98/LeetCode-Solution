//C++:

class Solution {
public:
    bool isAlienSorted(vector<string>& words, string order) {
        int mapping[26];
        for (int i=0;i<26;++i)
        {
            mapping[order[i]-'a'] = i;          // normal order
        }
        
        for (auto& w:words)
        {
            for (auto& ch:w)
            {
                ch = mapping[ch-'a'];  
            }
        }
        
        return is_sorted(words.begin(),words.end());
        
        
        
        
    }
};
