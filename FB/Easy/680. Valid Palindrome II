//C++:

class Solution {
public:
    bool validPalindrome(string s) {
        int n = s.size();
        int left = 0, right = n-1;
        
        while (left < right)
        {
            if (s[left] == s[right])
            {
                left++;
                right--;
            }
            else
            {
                if (isPal(s,left+1,right) || isPal(s,left,right-1)) return true;
                else    return false;
            }
        }
        return true;        
    }

private:
    bool isPal(string s, int left, int right)
    {
        while (left < right)
        {
            if (s[left] == s[right])
            {
                left++;
                right--;
            }
            else    return false;
        }
        return true;        
    }
};
