// c++

/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int maxPathSum(TreeNode* root) {
        int max_sum = INT_MIN;
        int temp = max_gain(root, max_sum);
        return max_sum;
    }
    
private:
    int max_gain(TreeNode* node, int &max_sum)
    {
        if (!node)  return 0;
        
        int left_gain = max(max_gain(node->left,max_sum),0);
        int right_gain = max(max_gain(node->right,max_sum),0);
        
        int new_path = node->val + left_gain + right_gain;
        
        max_sum = max(max_sum, new_path);
        
        return node->val + max(left_gain, right_gain);
    }
    
    
};
