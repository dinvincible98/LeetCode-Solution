
C++:
class Solution {
public:
    int getMinDistance(vector<int>& nums, int target, int start) {
        int index;
        int global_min=INT_MAX;
        for(int i=0;i<nums.size();++i)
        {
            if (nums[i]==target)
            {
                global_min = min(global_min,abs(i-start));
            }
        }
        return global_min;
    }
};
