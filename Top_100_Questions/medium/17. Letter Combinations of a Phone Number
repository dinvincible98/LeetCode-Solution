//C++:
class Solution {
public:
    vector<string> letterCombinations(string digits) {
        if (digits.empty()) return {};
        
        vector<string> res{""};
        
        for (auto& d:digits)
        {
            vector<string> temp;
            for (auto& c:list[d-'0'])
            {
                for (auto& r:res)
                {
                    temp.push_back(r+c);
                }
            }
            res.swap(temp);
        }
        
        return res;
        
        
        
        
        
    }
private:
    const vector<string> list{"","","abc","def","ghi","jkl","mno","pqrs","tuv","wxyz"};
};

// TC: O(4^n)
// SC: O(4^n)
